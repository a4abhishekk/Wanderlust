<% layout("/layouts/boilerplate") %>

<div class="row">
  <div class="col-md-8 offset-md-2">
    <h3 class="my-4"><%= listing.title %></h3>

    <div class="card listing-card">
      <img src="<%= listing.image.url %>" class="card-img-top show-img" alt="listing-image" />
      <div class="card-body">
        <p class="card-text">
          
          <%= listing.description %><br />
          â‚¹<%= listing.price.toLocaleString("en-in") %><br />
          <%= listing.location %>, <%= listing.country %>
        </p>
      </div>
    </div>

    
    <div class="d-flex justify-content-center gap-3 mt-4">
      <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark edit-btn">Edit</a>
      <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE">
        <button class="btn btn-danger">Delete</button>
      </form>
    </div>
  </div>
  <div class="col-md-8 offset-md-2">
    <hr>
    <h4>Leave a Review</h4>
    <form method="post" action="/listings/<%= listing.id %>/reviews" novalidate class="needs-validation">
      <div class="mb-3 mt-3">
        <label for="rating" class="form-label">Rating</label>
        <input type="range" min="1" max="5" id="rating" name="review[rating]" class="form-range">
      </div>
      <div class="mb-3 mt-3">
        <label for="comment" class="form-label">Comment</label>
        <textarea name="review[comment]" id="comment" cols="30" rows="5" class="form-control" required></textarea>
        <div class="invalid-feedback">Please add some comments</div>
      </div>
      <button class="btn btn-outline-dark">Submit</button>
    </form>

    <hr>

    <p><b>All Reviews</b></p>
    <div class="row">
    <% for(review of listing.reviews){ %>
      <div class="card col-5 ms-3 mb-3">
        <div class="card-body">
          <h5 class="card-title">Reviewer</h5>
          <p class="card-text"><%= review.comment %></p>
          <p class="card-text"><%= review.rating%> Stars</p>
          <form class="mb-3" method="post" action="/listings/<%=listing._id%>/reviews/<%=review.id%>?_method=DELETE">
            <button class="btn btn-sm btn-dark">Remove</button>
          </form>
        </div>
      </div>
   <% } %>
  </div>
  </div>
</div>
